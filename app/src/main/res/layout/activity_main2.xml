<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokemon_gradient"
    tools:context="com.example.invitado.pokemonp.MainActivity2">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="368dp"
        android:layout_height="300dp"
        android:background="@drawable/pokemon_gradient"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/poke_gradient"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nombreTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="164dp"
                android:layout_y="49dp"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/codigo"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="164dp"
                android:layout_y="22dp"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/altura"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="164dp"
                android:layout_y="181dp"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/peso"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_x="164dp"
                android:layout_y="216dp"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/habilidad"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="164dp"
                android:layout_y="83dp"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tipo"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_x="165dp"
                android:layout_y="118dp"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/experiencia"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_x="165dp"
                android:layout_y="150dp"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="23dp"
                android:text="Codigo:" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="49dp"
                android:text="Nombre:" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="25dp"
                android:layout_y="80dp"
                android:text="Habilidad:" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="113dp"
                android:text="Tipo:" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="25dp"
                android:layout_y="149dp"
                android:text="Experiencia:" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="25dp"
                android:layout_y="183dp"
                android:text="Altura:" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="218dp"
                android:text="Peso:" />

        </AbsoluteLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>